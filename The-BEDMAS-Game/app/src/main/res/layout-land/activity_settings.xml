<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linlay_settings_activity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="50dp">

            <LinearLayout
                android:id="@+id/linlay_difficutly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Difficutly:"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <Spinner
                    android:id="@+id/dropdown_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <CheckBox
                android:id="@+id/checkbox_show_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show answers?"/>

            <CheckBox
                android:id="@+id/checkbox_time_sessions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Countdown?"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_settings_okay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Save settings"
            android:padding="20dp"
            android:layout_marginLeft="50dp"
            android:background="@color/shale"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>